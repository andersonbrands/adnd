<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.ExtraLarge">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
    </style>
    <style name="Text.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Text.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="Text.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.Normal">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
    <style name="Text.Normal.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailsScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">@dimen/space_medium</item>
    </style>

    <style name="DetailPosterImage">
        <item name="android:layout_width">@dimen/poster_image_width</item>
        <item name="android:layout_height">@dimen/poster_image_height</item>
        <item name="android:layout_margin">@dimen/space_medium</item>
    </style>

    <style name="MovieIsFavoriteCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/favorite_checkbox_selector</item>
    </style>

    <style name="DetailSectionLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_medium</item>
        <item name="android:layout_marginBottom">@dimen/space_medium</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

</resources>
