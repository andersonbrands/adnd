<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="article"
            type="com.adnd.xyzreader.models.Article" />

        <import type="com.adnd.xyzreader.utils.Utils" />

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tiny_space"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:errorRes="@{@drawable/ic_image_48dp}"
                app:imgURL="@{article.thumb}"
                app:placeholderRes="@{@drawable/ic_image_48dp}"
                tools:background="@color/colorPrimaryDark"
                tools:layout_height="150dp" />

            <TextView
                android:id="@+id/article_title"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="4"
                android:paddingLeft="@dimen/large_space"
                android:paddingTop="@dimen/large_space"
                android:paddingRight="@dimen/large_space"
                android:paddingBottom="@dimen/tiny_space"
                android:text="@{article.title}"
                tools:text="Article Title" />

            <TextView
                android:id="@+id/article_subtitle"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="@dimen/large_space"
                android:paddingRight="@dimen/large_space"
                android:paddingBottom="@dimen/large_space"
                android:text="@{@string/article_date_author(Utils.getFormattedPublishedDate(article.published_date), article.author)}"
                tools:text="@string/article_date_author" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>
