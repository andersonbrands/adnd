<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="article"
            type="com.adnd.xyzreader.models.Article" />

        <import type="com.adnd.xyzreader.utils.Utils" />

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_space"
            android:orientation="horizontal">

            <com.adnd.xyzreader.custom_views.AspectRatioImageView
                android:id="@+id/thumbnail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:aspectRatio="@{4.0f/3.0f}"
                app:errorRes="@{@drawable/ic_image_48dp}"
                app:imgURL="@{article.thumb}"
                app:placeholderRes="@{@drawable/ic_image_48dp}"
                tools:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/small_space"
                android:layout_marginLeft="@dimen/small_space"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/article_title"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_space"
                    android:layout_marginRight="@dimen/small_space"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:paddingBottom="@dimen/tiny_space"
                    android:text="@{article.title}"
                    tools:text="Article Title" />

                <TextView
                    android:id="@+id/article_subtitle"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_space"
                    android:layout_marginRight="@dimen/small_space"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@{@string/article_date_author(Utils.getFormattedPublishedDate(article.published_date), article.author)}"
                    app:layout_constraintBottom_toBottomOf="@+id/thumbnail"
                    tools:text="@string/article_date_author" />

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</layout>
